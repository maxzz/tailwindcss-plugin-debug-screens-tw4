{
  "name": "tailwindcss-plugin-debug-screens-tw4",
  "version": "1.0.0",
  "description": "A TailwindCSS v4.0 plugin that displays screen sizes for debugging responsive designs",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "debug": "tsx src/index.ts",
    "test": "tsx test/test.ts",
    "prepublishOnly": "pnpm build",
    "deploy": "npm publish",
    "clean": "rimraf dist"
  },
  "keywords": [
    "tailwindcss",
    "plugin",
    "debug",
    "responsive",
    "breakpoints",
    "screen-sizes",
    "development"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": ""
  },
  "bugs": {
    "url": ""
  },
  "homepage": "",
  "peerDependencies": {
    "tailwindcss": "^4.0.0-alpha.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "rimraf": "^5.0.5",
    "tsx": "^4.6.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@8.0.0"
}